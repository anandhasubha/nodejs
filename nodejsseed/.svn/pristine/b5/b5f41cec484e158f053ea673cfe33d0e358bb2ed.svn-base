# Required metadata
sonar.projectKey=nodeseed:1.0.0
sonar.projectName=JSCOE Node Seed Project
sonar.projectVersion=1.0.0
 
# Path to the parent source code directory.
# Path is relative to the sonar-project.properties file. Replace "\" by "/" on Windows.
# Since SonarQube 4.2, this property is optional. If not set, SonarQube starts looking for source code
# from the directory containing the sonar-project.properties file.
sonar.sources=src
# Test folder
sonar.tests=test
 
# Encoding of the source code
sonar.sourceEncoding=UTF-8

# Language
sonar.language=js

# To import Unit Test results (xml files)
sonar.dynamicAnalysis=reuseReports
sonar.javascript.jstestdriver.reportsPath=dist/reports/testing/unit

# To import Unit Test LCOV report (Unit test coverage report)
sonar.dynamicAnalysis=reuseReports
sonar.javascript.lcov.reportPath=dist/reports/testing/unitCoverage/lcov.info
